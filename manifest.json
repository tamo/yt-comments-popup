{
	"name": "HB Comments Popup",
	"version": "0",
	"icons": {
		"128": "ytcp.png"
	},
	"description": "Preview HB comments by hovering over links unless Ctrl is pressed",
	"manifest_version": 3,
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"js": ["ytcp.js"],
			"matches": ["https://b.hatena.ne.jp/*"]
		}
	],
	"options_ui": {
		"page": "options.html"
	},
	"background": {
		"service_worker": "background.js"
	}
}
