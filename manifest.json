{
	"name": "YT Comments Popup",
	"version": "1.2.0",
	"icons": {
		"128": "ytcp.png"
	},
	"description": "Preview YT comments by hovering over links unless Ctrl is pressed",
	"manifest_version": 3,
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"js": ["main.js"],
			"matches": ["https://www.youtube.com/*"]
		}
	],
	"options_ui": {
		"page": "options.html"
	},
	"background": {
		"service_worker": "background.js"
	}
}
